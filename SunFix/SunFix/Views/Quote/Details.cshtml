@page
@model SunFix.Models.Quote

@{
    ViewData["Title"] = "Quote Details";
}

<h1>Quote Details</h1>

<div>
    <h4>Quote</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Client</dt>
        <dd class="col-sm-10">@Model.Client.Name</dd>
    </dl>

    <h4>Quote Parts</h4>
    <table class="table">
        <thead>
        <tr>
            <th>Part Name</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var part in Model.QuoteParts)
        {
            <tr>
                <td>@part.Part.Name</td>
                <td>@part.Quantity</td>
                <td>@part.PartQuotePrice.ToString("C")</td>
            </tr>
        }
        </tbody>
    </table>

    <p>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </p>
</div>
